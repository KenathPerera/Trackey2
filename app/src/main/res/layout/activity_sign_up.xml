<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:layout_marginTop="1.0in"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtUserId"
        android:layout_below="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="11xxxxxx"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_below="@+id/txtUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="0.1in"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_below="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/FailTxt"
        android:layout_below="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#9BAD52"
        android:textSize="11pt"
        />

    <Button
        android:id="@+id/btnSignUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/FailTxt"
        android:text="Sign In"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="361dp"
        android:layout_marginTop="0.2in"
        android:fontFamily="sans-serif"
        android:background="#F78383"
        android:textStyle="normal|bold|italic"/>


    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.1in"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSignUP"
        android:text="Back"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="361dp"
        android:fontFamily="sans-serif"
        android:background="#F78383"
        android:textStyle="normal|bold|italic"
        />

</RelativeLayout>